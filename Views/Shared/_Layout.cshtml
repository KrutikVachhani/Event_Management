                        @if (CommonVariables.UserName() != null)
                        {
                            <a asp-area="Users" asp-controller="Users" asp-action="UserSideProfile" class="nav-link">@CommonVariables.UserName()</a>
                        }
                        else
                        {
                            <a asp-area="SEC_User" asp-controller="SEC_User" asp-action="Logout" class="nav-link">Login</a>
                        }

                    </li>

                </ul>
            </div>
