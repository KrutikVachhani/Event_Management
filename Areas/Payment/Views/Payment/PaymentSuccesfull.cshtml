@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Event_Management.Areas.Payment.Models.PaymentModel

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section ftco-animate text-center">
                <h1 class="text-center text-bold">Payment Completed Successfully</h1>
            </div>
        </div>
        <br/>
        <table class="table table-striped" width="10px">
            <thead>
                <tr>
                    <td><b>Transaction Number</b></td>
                    <td><b>@Html.DisplayText("TransactionId")</b></td>
                </tr>
                <tr>
                    <td><b>Order Number</b></td>
                    <td><b>@Html.DisplayText("OrderId")</b></td>
                </tr>
            </thead>
        </table>
    </div>
</section>
