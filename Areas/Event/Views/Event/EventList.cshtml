                    <form method="post" asp-area="Event" asp-controller="Event" asp-action="EventFilter">
                        <div class="card shadow mb-4">
                            <div class="card-header">
                                <h4 class="card-title">Filter</h4>
                            </div>
                            <div class="card-body">
