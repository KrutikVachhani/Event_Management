            </main>
            </div>
            
            <script src="~/manup/js/jquery-3.3.1.min.js"></script>
            <script src="~/manup/js/bootstrap.min.js"></script>
            <script src="~/manup/js/jquery.magnific-popup.min.js"></script>
            <script src="~/manup/js/jquery.countdown.min.js"></script>
