@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using System.Data;
@using Event_Management.Areas.Event.Models;
@using Event_Management.Areas.Venue.Models;
@model EventModel

<div class="row justify-content-center">
    <div class="col-12">
        <h2 class="page-title">Add/Edit Event</h2>
        <form method="post" asp-area="Event" asp-controller="Event" asp-action="EventSave">
            <div class="card shadow mb-4">
                <div class="card-header">
                    <strong class="card-title">Enter Details</strong>
                </div>
                @Html.HiddenFor(x => x.EventID)
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="simpleinput">Event Name</label>
                                <input type="text" id="simpleinput" class="form-control" placeholder="Enter Event Name" asp-for="EventName">
                                @* <span asp-validation-for="EventName"></span> *@
                            </div>
                            <div class="form-group mb-3">
                                <label for="simpleinput">Event Date</label>
                                <input type="date" class="form-control" placeholder="Enter Location" asp-for="EventDateTime">
                                @* <span asp-validation-for="EventDateTime"></span> *@
                            </div>

                        </div> <!-- /.col -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="simpleinput">IsPrivate</label>
                                <input type="text" class="form-control" placeholder="Enter Event is Private Or Not" asp-for="IsPrivate">
                                @* <span asp-validation-for="IsPrivate"></span> *@
                            </div>
                            <div class="form-group mb-3">
                                <label for="example-select">Select Venue</label>
                                <select class="form-control" id="VenueID" name="VenueID">
                                    <option value="">- - -</option>
                                    @foreach (VenueModel VenueName in ViewBag.VenueList)
                                    {
                                        <option value="@VenueName.VenueID">@VenueName.VenueName</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group mb-3">
                                <label>Selected Services:</label><br />
                                @foreach (ServiceModel ServiceName in ViewBag.ServiceList)
                                {
                                    <div>
                                        <input type="checkbox" id="@ServiceName.ServiceID" name="SelectedService" value="@ServiceName.ServiceName" />
                                        <label>@ServiceName.ServiceName</label>
                                    </div>
                                }
                            </div>

                        </div>
                        <br />
                        <br />
                        <div class="form-group col-md-6">
                            <button type="submit" class="btn mb-2 btn-info">Save</button>
                            <a asp-area="Event" asp-controller="Event" asp-action="EventList" class="btn mb-2 btn-info">Cancel</a>
                        </div>
                    </div>
                </div>
            </div> <!-- / .card -->
        </form>
    </div>
</div>