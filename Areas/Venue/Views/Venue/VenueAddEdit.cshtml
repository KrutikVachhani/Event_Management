@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using System.Data;
@using Event_Management.Areas.Venue.Models;
@model VenueModel

<div class="row justify-content-center">
    <div class="col-12">
        <h2 class="page-title">Add/Edit Venue</h2>
        <form method="post" asp-area="Venue" asp-controller="Venue" asp-action="VenueSave">
            <div class="card shadow mb-4">
                <div class="card-header">
                    <strong class="card-title">Enter Details</strong>
                </div>
                @Html.HiddenFor(x => x.VenueID)
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="simpleinput" asp-for="VenueName">Venue Name</label>
                                <input type="text" id="simpleinput" class="form-control" placeholder="Enter Venue Name" asp-for="VenueName">
                                <span asp-validation-for="VenueName"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label for="simpleinput">Location</label>
                                <input type="text" class="form-control" placeholder="Enter Location" asp-for="Location">
                                <span asp-validation-for="Location"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label for="simpleinput">Capacity</label>
                                <input type="text" class="form-control" placeholder="Enter Capacity" asp-for="Capacity">
                                <span asp-validation-for="Capacity"></span>
                            </div>

                        </div> <!-- /.col -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="simpleinput">Contact Person</label>
                                <input type="text" class="form-control" placeholder="Enter Contact Person Name" asp-for="ContactPerson">
                                <span asp-validation-for="ContactPerson"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label for="simpleinput">Contact Number</label>
                                <input type="text" class="form-control" placeholder="Enter Contact Number" asp-for="ContactNumber">
                                <span asp-validation-for="ContactNumber"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <button type="submit" class="btn mb-2 btn-info">Save</button>
                                <a asp-area="Venue" asp-controller="Venue" asp-action="VenueList" class="btn mb-2 btn-info">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- / .card -->
        </form>
    </div>
</div>