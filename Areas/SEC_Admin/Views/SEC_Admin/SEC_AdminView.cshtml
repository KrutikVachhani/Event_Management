                                <div class="col">
                                    @foreach (DataRow dr in Model.Rows)
                                    {
                                        <span class="h2 mb-0">@dr["CountClients"]</span>
                                    }
                                    <p class="small text-muted mb-0">Total Clients</p>
                                </div>
                                <div class="col-auto">
                                    <span class="fe fe-32 fe-users text-muted mb-0"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    </a>
                </div>

                <div class="col-md-6 col-xl-3 mb-4">
