@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using System.Data;
@using System.Data.SqlClient;
@using Event_Management.Areas.SEC_Admin;
@using Event_Management.BAL;
@model DataTable


<h1>Hello, @CommonVariables.UserName()</h1>
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="row">
                <div class="col-md-6 col-xl-3 mb-4">
                <a asp-area="Users" asp-controller="Users" asp-action="UserList" style="text-decoration:none">
                    <div class="card shadow">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col">
                                    @foreach (DataRow dr in Model.Rows)
                                    {
                                        <span class="h2 mb-0">@dr["CountUsers"]</span>
                                    }
                                    <p class="small text-muted mb-0">Total Users</p>
                                </div>
                                <div class="col-auto">
                                    <span class="fe fe-32 fe-users text-muted mb-0"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    </a>
                </div>

                <div class="col-md-6 col-xl-3 mb-4">
                <a asp-area="Users" asp-controller="Users" asp-action="AdminList" style="text-decoration:none">
                    <div class="card shadow">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col">
                                    @foreach (DataRow dr in Model.Rows)
                                    {
                                        <span class="h2 mb-0">@dr["CountAdmins"]</span>
                                    }
                                    <p class="small text-muted mb-0">Total Admins</p>
                                </div>
                                <div class="col-auto">
                                    <span class="fe fe-32 fe-users text-muted mb-0"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    </a>
                </div>

                <div class="col-md-6 col-xl-3 mb-4">
                <a asp-area="Users" asp-controller="Users" asp-action="ClientList" style="text-decoration:none">
                    <div class="card shadow">
                        <div class="card-body">
