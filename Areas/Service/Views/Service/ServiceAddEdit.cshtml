@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using System.Data;
@using Event_Management.Areas.Service.Models;
@model ServiceModel

<div class="row justify-content-center">
    <div class="col-12">
        <h2 class="page-title">Add/Edit Service</h2>
        <form method="post" asp-area="Service" asp-controller="Service" asp-action="ServiceSave">
            <div class="card shadow mb-4">
                <div class="card-header">
                    <strong class="card-title">Enter Details</strong>
                </div>
                @Html.HiddenFor(x => x.ServiceID)
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="simpleinput" asp-for="ServiceName">Service Name</label>
                                <input type="text" id="simpleinput" class="form-control" placeholder="Enter Service Name" asp-for="ServiceName">
                                <span asp-validation-for="ServiceName"></span>
                            </div>
                        </div> <!-- /.col -->
                        
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <button type="submit" class="btn mb-2 btn-info">Save</button>
                                <a asp-area="Service" asp-controller="Service" asp-action="ServiceList" class="btn mb-2 btn-info">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- / .card -->
        </form>
    </div>
</div>
